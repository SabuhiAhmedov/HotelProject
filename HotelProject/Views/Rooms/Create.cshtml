
@model Rooms
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div>
                    <h3><strong>Otaq Yaradın</strong></h3>
                </div>

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photos">Şəkil</label>
                        <input asp-for="Photos" class="form-control" placeholder="Tittle">
                        <span asp-validation-for="Photos" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="RoomNumber">Nömrə</label>
                        <input asp-for="RoomNumber" class="form-control">
                        <span asp-validation-for="RoomNumber" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Capacity">Tutum/Nəfər</label>
                        <input asp-for="Capacity" class="form-control">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Rent">Qiymət/Azn</label>
                        <input asp-for="Rent" class="form-control">
                        <span asp-validation-for="Rent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">Telefon</label>
                        <input asp-for="Phone" class="form-control">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class=" form-group">
                        <label>Otaq növü seçin</label> @*Bootstrapdan Select kodu gotrudum form olaraq*@
                        <select name="typeid" class="form-control" onchange="onTypeChange()">
                            @foreach (RoomType type in ViewBag.RoomType)
                            {
                                <option value="@type.Id"> @type.Type</option>

                            }
                            <option class="btn btn-warning text-bold " style=""  value="other">Əlavə edin</option>
                        </select>


                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Yarat</button>
                    <a asp-action="Index" class="btn btn-light">Geri</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function onTypeChange() {
            var select = document.getElementsByName("typeid")[0];
            var selectedOption = select.options[select.selectedIndex].value;
            if (selectedOption === 'other') {
                window.location.href = '/RoomType/Create'; 
            }
        }
    </script>
}



@model List<Guests>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div style="color:burlywood" class="my-3"> <h4><strong>Qalma müddəti bitən qonaqlar  </strong></h4></div>

                @foreach (Guests guests in Model)
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5>@guests.FullName</h5>
                            <p class="mb-0">Bitmə tarixi: @guests.DepartDate</p>
                        </div>
                        <div>
                    <a asp-action="DeleteGuest" asp-route-id="@guests.Id" class="btn btn-danger text-white rounded-pill mx-1">Sil</a>
                    <a asp-action="Update" asp-controller="Notfications" asp-route-id="@guests.Id" class="btn btn-success rounded-pill">Qalma müddətini uzat</a>
                </div>
                    </div>
                }

                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    @if (Model.Count != 0)
                    {
                        <a asp-action="Index" asp-controller="Guests" class="btn btn-light rounded-pill mt-4">Geri</a>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

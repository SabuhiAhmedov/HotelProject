@model List<Income>
<section class="content">
    <div class="container-fluid">
        <div class="row">



            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mx-3">
                            <h3 class="card-title font-weight-bold  ">Gəlirlər</h3>
                            <a asp-action="Create" class="btn btn-info text-white rounded-pill mx-2" style="height:35px;">Daxil et </a>
                        </div>





                        <div class="card-body">

                            <table class="table table-bordered  my-0">
                                <thead>
                                    <tr>


                                        <th>Mənbə</th>
                                        <th>Məbləğ/Manat</th>
                                        <th>Tarix </th>
                                        <th>İcraçı və rolu </th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Income item in Model)
                                    {
                                        <tr>


                                            <td>@item.Source</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Time</td>
                                            <td>@item.Executor</td>


                                          
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
            @*Paginations*@
            <div class="col-12 d-flex justify-content-center">
                <div class="card">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">

                            @for (int count = 1; count <= ViewBag.PageCount; count++)
                            {
                                if (ViewBag.CurrentPage == count)
                                {
                                    <li class="page-item disabled"><a style="color:red !important" class="page-link" asp-route-page="@count">@count</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-route-page="@count">@count</a></li>
                                }

                            }



                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</section>

